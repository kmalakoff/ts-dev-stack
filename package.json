{
  "name": "ts-dev-stack",
  "description": "Development stack for TypeScript libraries",
  "version": "0.4.1",
  "license": "MIT",
  "bin": {
    "tsds": "./bin/ts-dev-stack.js"
  },
  "scripts": {
    "deploy": "np --no-yarn",
    "format": "prettier --write .",
    "lint": "eslint .",
    "predeploy": "npm run lint && npm run format && depcheck --config .config/.depcheckrc.json && sortpack",
    "test": "mocha-compat test/spec/**/*.test.js --no-timeouts",
    "test:engines": "nvu engines --desc npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:kmalakoff/ts-dev-stack.git"
  },
  "files": [
    "lib",
    ".eslintrc.json",
    ".depcheckrc.json",
    ".prettierrc.json",
    "tsconfig.json"
  ],
  "keywords": [
    "c8",
    "dev",
    "development",
    "eslint",
    "mocha",
    "prettier",
    "rollup",
    "stack",
    "test",
    "typescript"
  ],
  "dependencies": {
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@swc/core": "1.2.205",
    "@types/mocha": "^9.1.1",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "assert": "^2.0.0",
    "c8": "^7.11.3",
    "call-once-fn": "^1.0.0",
    "cross-spawn-cb": "^0.5.9",
    "depcheck": "^1.4.3",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-mocha": "^10.0.5",
    "exit": "^0.1.2",
    "fs-iterator": "^4.1.0",
    "getopts-compat": "^2.2.5",
    "gh-pages": "^4.0.0",
    "just-extend": "^6.0.1",
    "karma": "^6.4.0",
    "karma-chrome-launcher": "^3.1.1",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "karma-sourcemap-loader": "^0.3.8",
    "karma-webpack": "^5.0.0",
    "lodash.camelcase": "^4.3.0",
    "mkdirp": "^0.5.6",
    "mocha": "^10.0.0",
    "mocha-compat": "^3.5.5",
    "node-version-use": "^0.2.3",
    "np": "^7.6.2",
    "path-string-prepend": "^0.2.0",
    "prettier": "^2.7.1",
    "queue-cb": "^1.1.6",
    "regenerator-runtime": "^0.13.9",
    "rimraf": "^3.0.2",
    "rollup": "^2.75.7",
    "rollup-plugin-node-externals": "^4.1.0",
    "rollup-plugin-swc": "^0.2.1",
    "rollup-plugin-terser": "^7.0.2",
    "sortpack": "^2.2.4",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.8.1",
    "tsconfig-to-swcconfig": "^2.0.1",
    "typedoc": "^0.23.2",
    "typedoc-plugin-rename-defaults": "^0.6.1",
    "typescript": "^4.7.4",
    "webpack": "^5.73.0"
  },
  "type": "commonjs",
  "engines": {
    "node": ">=0.8"
  },
  "devDependencies": {
    "@types/jest": "^28.1.3",
    "react": "^18.2.0"
  }
}
