{
  "name": "tsds-build",
  "version": "1.2.2",
  "description": "Development stack for TypeScript libraries",
  "keywords": [
    "c8",
    "dev",
    "development",
    "mocha",
    "rollup",
    "stack",
    "test",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/kmalakoff/ts-dev-stack.git"
  },
  "license": "MIT",
  "type": "commonjs",
  "main": "dist/cjs/index.js",
  "types": "dist/types/index.d.ts",
  "bin": {
    "tsds-build": "bin/cli.js"
  },
  "files": [
    "dist",
    "assets",
    "scripts"
  ],
  "scripts": {
    "assets": "node ./scripts/assets.js",
    "build": "node ./scripts/build.js",
    "depcheck": "depcheck",
    "format": "biome check --write --unsafe src/ test/ scripts/",
    "test": "",
    "test2": "tsds test:node --no-timeouts",
    "test:engines": "npm test",
    "version": ""
  },
  "dependencies": {
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@swc/core": "*",
    "cross-spawn-cb": "^1.1.2",
    "exit": "^0.1.2",
    "fs-iterator": "^5.1.1",
    "get-tsconfig-compat": "^1.1.1",
    "getopts-compat": "^2.2.5",
    "lodash.camelcase": "4.3.0",
    "node-version-use": "^1.0.4",
    "queue-cb": "^1.4.2",
    "resolve": "^1.22.9",
    "rimraf2": "^2.8.2",
    "rollup": "^4.28.1",
    "rollup-plugin-node-externals": "^8.0.0",
    "ts-swc-rollup-plugin": "^1.2.2",
    "ts-swc-transform": "^1.1.1",
    "tsds-lib": "^1.2.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.2",
    "depcheck": "^1.4.7",
    "env-path-key": "^1.0.0",
    "mkdirp": "0.5.6",
    "path-string-prepend": "^1.0.0",
    "tsds-lib-test": "^1.2.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=0.8"
  },
  "tsds": {
    "source": "src/index.mjs",
    "targets": [
      "cjs",
      "esm"
    ]
  }
}
