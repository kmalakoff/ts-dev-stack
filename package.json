{
  "name": "ts-dev-stack",
  "description": "Development stack for TypeScript libraries",
  "version": "0.6.8",
  "license": "MIT",
  "bin": {
    "tsds": "./bin/ts-dev-stack.js"
  },
  "scripts": {
    "deploy": "np --no-yarn",
    "format": "prettier --write .",
    "lint": "eslint .",
    "predeploy": "npm run lint && npm run format && depcheck --config .config/.depcheckrc.json && sortpack",
    "test": "mocha-compat test/spec/**/*.test.js --no-timeouts",
    "test:engines": "nvu engines --desc npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:kmalakoff/ts-dev-stack.git"
  },
  "files": [
    "lib",
    ".eslintrc.json",
    ".depcheckrc.json",
    ".prettierrc.json",
    "tsconfig.json"
  ],
  "keywords": [
    "c8",
    "dev",
    "development",
    "eslint",
    "mocha",
    "prettier",
    "rollup",
    "stack",
    "test",
    "typescript"
  ],
  "dependencies": {
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@swc/core": "1.2.205",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.0.3",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "assert": "^1.5.0",
    "c8": "^7.11.3",
    "call-once-fn": "^1.0.0",
    "cross-spawn-cb": "^0.5.13",
    "depcheck": "^1.4.3",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-mocha": "^10.0.5",
    "exit": "^0.1.2",
    "fs-iterator": "^4.1.1",
    "getopts-compat": "^2.2.5",
    "gh-pages": "^4.0.0",
    "install": "^0.13.0",
    "just-extend": "^6.0.1",
    "karma": "^6.4.0",
    "karma-chrome-launcher": "^3.1.1",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "karma-sourcemap-loader": "^0.3.8",
    "karma-webpack": "^5.0.0",
    "lodash.camelcase": "^4.3.0",
    "mkdirp": "^0.5.6",
    "mocha": "^10.0.0",
    "mocha-compat": "^3.5.5",
    "node-version-call": "^0.2.1",
    "node-version-use": "^0.2.6",
    "np": "^7.6.2",
    "npm": "^8.13.2",
    "os-shim": "^0.1.3",
    "path-string-prepend": "^0.2.0",
    "pirates": "^2.1.2",
    "prettier": "^2.7.1",
    "queue-cb": "^1.1.6",
    "regenerator-runtime": "^0.13.9",
    "rimraf": "^2.7.1",
    "rollup": "^2.76.0",
    "rollup-plugin-node-externals": "^3.1.2",
    "rollup-plugin-terser": "^7.0.2",
    "short-hash": "^1.0.0",
    "sortpack": "^2.3.0",
    "ts-constants": "^0.1.0",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.8.2",
    "tsx": "^3.8.0",
    "typedoc": "^0.23.7",
    "typedoc-plugin-rename-defaults": "^0.6.4",
    "typescript": "^4.7.4",
    "webpack": "^5.73.0"
  },
  "type": "commonjs",
  "engines": {
    "node": ">=0.8"
  },
  "devDependencies": {
    "@types/jest": "^28.1.5",
    "jsdom": "^15.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dom-event": "^0.1.3",
    "react-native-web": "^0.18.4"
  }
}
