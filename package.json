{
  "name": "ts-dev-stack",
  "description": "Development stack for TypeScript libraries",
  "version": "0.1.5",
  "license": "MIT",
  "bin": {
    "tsds": "./bin/ts-dev-stack.js"
  },
  "scripts": {
    "deploy": "np --no-yarn",
    "format": "prettier --write .",
    "lint": "eslint .",
    "predeploy": "npm run lint && npm run format && depcheck --config .config/.depcheckrc.json && sortpack",
    "test": "mocha-compat test/spec/**/*.test.js --no-timeouts",
    "test:engines": "nvu engines --desc npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:kmalakoff/ts-dev-stack.git"
  },
  "keywords": [
    "babel",
    "c8",
    "dev",
    "development",
    "eslint",
    "mocha",
    "prettier",
    "rollup",
    "stack",
    "test",
    "typescript"
  ],
  "dependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-typescript": "^7.15.0",
    "@babel/register": "^7.15.3",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "babel-plugin-add-import-extension": "^1.6.0",
    "babel-plugin-add-module-exports": "^1.0.4",
    "c8": "^7.10.0",
    "camelcase": "^6.2.0",
    "chai": "^4.3.4",
    "cross-spawn-cb": "^0.3.1",
    "depcheck": "^1.4.2",
    "eslint": "8.14.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-mocha": "^9.0.0",
    "exit": "^0.1.2",
    "getopts-compat": "^2.2.5",
    "gh-pages": "^3.2.3",
    "just-extend": "^4.2.1",
    "karma": "^6.3.4",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "karma-sourcemap-loader": "^0.3.8",
    "karma-webpack": "^5.0.0",
    "mocha": "^9.1.3",
    "mocha-compat": "^3.5.5",
    "node-version-use": "^0.2.0",
    "np": "^7.5.0",
    "path-string-prepend": "^0.2.0",
    "prettier": "^2.4.1",
    "queue-cb": "^1.1.6",
    "rimraf": "^2.7.1",
    "rollup": "^2.58.0",
    "rollup-plugin-node-externals": "^2.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "sortpack": "^2.2.0",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.3.0",
    "typedoc": "^0.22.6",
    "typedoc-plugin-rename-defaults": "^0.4.0",
    "typescript": "^4.4.4",
    "webpack": "^5.59.0"
  },
  "type": "commonjs",
  "engines": {
    "node": ">=0.8"
  }
}
