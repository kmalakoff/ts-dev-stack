{
  "name": "root",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "dev/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "clean": "node -e \"const dir = require('path').join(require('os').homedir(), '.im'); try {require('fs').rmdirSync(dir, {recursive: true})} catch(err) {}\"",
    "docs": "cd packages && ep -d1 -c100 npm run docs",
    "format": "cd packages && ep -d1 -c100 npm run format",
    "test": "cd packages/ts-dev-stack && npm run test",
    "test:engines": "cd packages/ts-dev-stack && npm run test",
    "version": "cd packages && ep -d1 -c100 npm run version"
  },
  "dependencies": {
    "each-package": "^0.8.7",
    "lerna": "^8.1.9"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.5"
  },
  "tsds": {
    "source": "src/index.ts"
  }
}
