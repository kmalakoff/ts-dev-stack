    "assert": "1.5.0",
    "c8": "^9.1.0",
    "call-once-fn": "^1.0.1",
    "cross-spawn-cb": "^0.6.18",
    "depcheck": "^1.4.7",
    "env-path-key": "^0.3.0",
    "exit": "^0.1.2",
    "fs-access-compat": "^1.0.3",
    "fs-iterator": "^4.1.1",
    "get-tsconfig-compat": "^0.1.0",
    "getopts-compat": "^2.2.5",
    "gh-pages": "^6.1.1",
    "just-extend": "^6.2.0",
    "karma": "^6.4.2",
    "karma-chrome-launcher": "^3.2.0",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "karma-sourcemap-loader": "^0.4.0",
    "karma-webpack": "^5.0.1",
    "lodash.camelcase": "4.3.0",
    "mkdirp": "0.5.6",
    "mocha": "10.0.0",
    "mocha-compat": "^3.5.5",
    "os-shim": "^0.1.3",
    "path-string-prepend": "^0.2.2",
    "queue-cb": "^1.1.7",
    "regenerator-runtime": "^0.14.1",
    "rimraf": "2.7.1",
    "rollup": "^4.11.0",
    "rollup-plugin-node-externals": "^7.0.1",
    "short-hash": "^1.0.0",
    "sort-package-json": "^2.7.0",
    "ts-loader": "^9.5.1",
    "ts-swc-loaders": "^0.3.4",
    "typedoc": "^0.25.8",
    "typescript": "^5.3.3",
    "webpack": "^5.90.2"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.19",
    "ts-dev-stack": "^0.12.2"
  },
  "engines": {
    "node": ">=0.8"
  },
  "tsds": {
    "source": "src/index.js",
    "targets": [
      "cjs",
      "esm"
    ]
