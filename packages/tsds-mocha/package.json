{
  "name": "tsds-mocha",
  "version": "1.19.1",
  "description": "Development stack for TypeScript libraries",
  "keywords": [
    "dev",
    "development",
    "mocha",
    "stack",
    "test",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/kmalakoff/ts-dev-stack.git"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "dist/cjs/index.js",
  "types": "dist/cjs/index.d.ts",
  "files": [
    "dist",
    "assets",
    "scripts"
  ],
  "scripts": {
    "build": "npx ts-dev-stack build",
    "format": "biome check --write --unsafe src/ && biome check --config-path biome.es5.json --write --unsafe scripts/",
    "postinstall": "node ./scripts/postinstall.cjs",
    "prepublishOnly": "npx ts-dev-stack validate",
    "test": "",
    "test2": "mocha --no-timeouts test/**/*.test.*",
    "test:engines": "npm test",
    "version": ""
  },
  "dependencies": {
    "assert": "1.5.0",
    "cross-spawn-cb": "*",
    "getopts-compat": "*",
    "link-unlink": "*",
    "mocha": "11.6.0",
    "mocha-compat": "*",
    "mocha-compat-esm": "npm:mocha@11.1.0",
    "queue-cb": "*",
    "regenerator-runtime": "*",
    "resolve": "*",
    "resolve-bin-sync": "*",
    "ts-swc-loaders": "*",
    "tsds-lib": "*",
    "unixify": "*"
  },
  "devDependencies": {
    "@types/mocha": "*",
    "@types/node": "*"
  },
  "engines": {
    "node": ">=0.8"
  },
  "tsds": {
    "source": "src/index.ts"
  }
}
