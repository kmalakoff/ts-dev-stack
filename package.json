{
  "name": "ts-dev-stack",
  "version": "0.9.0",
  "description": "Development stack for TypeScript libraries",
  "keywords": [
    "c8",
    "dev",
    "development",
    "mocha",
    "rollup",
    "stack",
    "test",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:kmalakoff/ts-dev-stack.git"
  },
  "license": "MIT",
  "type": "commonjs",
  "bin": {
    "tsds": "./bin/ts-dev-stack.js"
  },
  "files": [
    "lib",
    "config"
  ],
  "scripts": {
    "postinstall": "node lib/postinstall.js",
    "depcheck": "depcheck",
    "build": "",
    "predeploy": "npm run format && npm run format && depcheck && sort-package-json",
    "deploy": "np --no-yarn",
    "format": "biome check --apply lib/ test/",
    "test": "mocha-compat test/spec/**/*.test.js --no-timeouts",
    "test:engines": "npm test"
  },
  "dependencies": {
    "@biomejs/biome": "^1.5.3",
    "@rollup/plugin-node-resolve": "13.3.0",
    "assert": "1.5.0",
    "c8": "7.12.0",
    "call-once-fn": "^1.0.1",
    "cross-spawn-cb": "^0.6.14",
    "depcheck": "^1.4.7",
    "env-path-key": "^0.3.0",
    "exit": "^0.1.2",
    "fs-access-compat": "^1.0.3",
    "fs-iterator": "^4.1.1",
    "get-tsconfig-compat": "^0.0.1",
    "getopts-compat": "^2.2.5",
    "gh-pages": "^6.1.1",
    "just-extend": "^6.2.0",
    "karma": "^6.4.2",
    "karma-chrome-launcher": "^3.2.0",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "karma-sourcemap-loader": "^0.4.0",
    "karma-webpack": "^5.0.1",
    "lodash.camelcase": "4.3.0",
    "mkdirp": "0.5.6",
    "mocha": "10.0.0",
    "mocha-compat": "^3.5.5",
    "os-shim": "^0.1.3",
    "path-string-prepend": "^0.2.2",
    "queue-cb": "^1.1.7",
    "regenerator-runtime": "0.13.9",
    "rimraf": "2.7.1",
    "rollup": "2.76.0",
    "rollup-plugin-node-externals": "3.1.2",
    "rollup-plugin-terser": "^7.0.2",
    "short-hash": "^1.0.0",
    "sort-package-json": "^2.7.0",
    "ts-loader": "^9.5.1",
    "ts-node": "10.8.2",
    "ts-swc-loaders": "^0.1.3",
    "typedoc": "^0.25.8",
    "typedoc-plugin-rename-defaults": "^0.7.0",
    "typescript": "^5.3.3",
    "webpack": "^5.90.1"
  },
  "engines": {
    "node": ">=0.8"
  }
