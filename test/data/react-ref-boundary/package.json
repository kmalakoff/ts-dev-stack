{
  "name": "react-ref-boundary",
  "version": "0.0.0",
  "description": "React context for grouping react references by boundary in react dom, native and web. Ideal for group references for contains checks when using react portals",
  "keywords": [
    "react",
    "provider",
    "context",
    "ref",
    "boundary",
    "group",
    "portal",
    "react-native",
    "react-native-web",
    "native",
    "web",
    "dom",
    "contains",
    "universal",
    "typescript"
  ],
  "license": "MIT",
  "author": "Kevin Malakoff <kmalakoff@gmail.com> (https://github.com/kmalakoff)",
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.mjs",
  "exports": {
    ".": {
      "import": "./dist/esm/index.mjs",
      "require": "./dist/cjs/index.js",
      "types": "./dist/esm/index.d.ts"
    },
    "./*": "./*"
  },
  "types": "dist/esm/index.d.ts",
  "repository": "kmalakoff/react-ref-boundary",
  "scripts": {
    "build": "tsds build",
    "deploy": "tsds deploy",
    "format": "tsds format",
    "lint": "tsds lint",
    "test": "tsds link && cross-env NODE_OPTIONS=--experimental-vm-modules BABEL_ENV=test jest test/**/*.test.*",
    "version": "tsds version"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.18.6",
    "@jest/globals": "^28.1.1",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/react-native": "^10.1.1",
    "@types/jest": "^28.1.3",
    "@types/react": "18.0.14",
    "@types/react-native": "^0.69.1",
    "cross-env": "^7.0.3",
    "jest": "^28.1.1",
    "jest-environment-jsdom": "^28.1.1",
    "metro-react-native-babel-preset": "^0.71.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-error-boundary": "^3.1.4",
    "react-native": "^0.69.0",
    "react-native-web": "^0.18.2",
    "react-test-renderer": "18.2.0",
    "ts-dev-stack": "^0.4.1"
  },
  "peerDependencies": {
    "react": "*"
  },
  "engines": {
    "node": ">=12"
  },
  "unpkg": "dist/umd/react-ref-boundary.js",
  "tsds": {
    "source": "src/index.tsx",
    "globals": {
      "react": "React"
    }
  }
}
