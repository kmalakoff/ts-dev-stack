{
  "name": "tsds-c8",
  "version": "1.3.0",
  "description": "Development stack for TypeScript libraries",
  "keywords": [
    "dev",
    "development",
    "mocha",
    "stack",
    "test",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/kmalakoff/ts-dev-stack.git"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/esm/index.mjs",
      "require": "./dist/cjs/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./*": "./*"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.mjs",
  "types": "dist/types/index.d.ts",
  "bin": {
    "tsds-c8": "bin/cli.cjs"
  },
  "files": [
    "dist",
    "assets",
    "scripts"
  ],
  "scripts": {
    "build": "node ../tsds-build/scripts/build.js",
    "depcheck": "depcheck",
    "format": "biome check --write --unsafe src/ test/ scripts/",
    "postinstall": "node ./scripts/postinstall.cjs",
    "test": "",
    "test2": "tsds test:node --no-timeouts",
    "test:engines": "npm test",
    "version": ""
  },
  "dependencies": {
    "assert": "1.5.0",
    "c8": "^10.1.3",
    "cross-spawn-cb": "^1.1.2",
    "exit": "^0.1.2",
    "getopts-compat": "^2.2.5",
    "mocha": "^11.0.1",
    "mocha-compat": "^3.6.2",
    "queue-cb": "^1.4.4",
    "regenerator-runtime": "^0.14.1",
    "resolve": "^1.22.10",
    "rimraf2": "^2.8.2",
    "ts-swc-loaders": "^1.2.3",
    "tsds-lib": "^1.3.0",
    "unixify": "^1.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.2",
    "depcheck": "^1.4.7",
    "tsds-lib-test": "^1.3.0",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=0.8"
  },
  "tsds": {
    "source": "src/index.ts",
    "targets": [
      "cjs",
      "esm"
    ]
  }
}
