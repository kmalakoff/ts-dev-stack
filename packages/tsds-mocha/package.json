{
  "name": "tsds-mocha",
  "version": "1.19.1",
  "description": "Development stack for TypeScript libraries",
  "keywords": [
    "dev",
    "development",
    "mocha",
    "stack",
    "test",
    "typescript"
  ],
  "homepage": "https://github.com/kmalakoff/ts-dev-stack",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/kmalakoff/ts-dev-stack.git"
  },
  "license": "MIT",
  "author": "Kevin Malakoff <kmalakoff@gmail.com> (https://github.com/kmalakoff)",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "dist/cjs/index.js",
  "types": "dist/cjs/index.d.ts",
  "files": [
    "dist",
    "scripts"
  ],
  "scripts": {
    "build": "tsds build",
    "format": "biome check --write --unsafe && biome check --config-path biome.es5.json --write --unsafe scripts/",
    "postinstall": "node ./scripts/postinstall.cjs",
    "prepublishOnly": "tsds validate",
    "test": "tsds test:node --no-timeouts",
    "test:engines": "nvu engines tsds test:node --no-timeouts",
    "version": "tsds version"
  },
  "dependencies": {
    "assert": "1.5.0",
    "cross-spawn-cb": "*",
    "getopts-compat": "*",
    "link-unlink": "*",
    "mocha": "11.6.0",
    "mocha-compat": "*",
    "mocha-compat-esm": "npm:mocha@11.1.0",
    "queue-cb": "*",
    "regenerator-runtime": "*",
    "resolve": "*",
    "resolve-bin-sync": "*",
    "ts-swc-loaders": "*",
    "tsds-lib": "*",
    "unixify": "*"
  },
  "devDependencies": {
    "@biomejs/biome": "*",
    "@types/mocha": "*",
    "@types/node": "*",
    "mocha-compat": "*",
    "module-link-unlink": "*",
    "node-version-use": "*",
    "os-shim": "*",
    "short-hash": "*",
    "ts-dev-stack": "*",
    "ts-swc-loaders": "*",
    "tsds-lib-test": "*"
  },
  "engines": {
    "node": ">=0.8"
  },
  "tsds": {
    "source": "src/index.ts"
  }
}
