{
  "name": "tsds-mocha",
  "version": "1.1.0",
  "description": "Development stack for TypeScript libraries",
  "keywords": [
    "dev",
    "development",
    "mocha",
    "stack",
    "test",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/kmalakoff/ts-dev-stack.git"
  },
  "license": "MIT",
  "type": "commonjs",
  "main": "dist/cjs/index.js",
  "types": "dist/types/index.d.ts",
  "bin": {
    "tsds-mocha": "bin/cli.js"
  },
  "files": [
    "dist",
    "assets",
    "scripts"
  ],
  "scripts": {
    "postinstall": "node ./scripts/postinstall.js",
    "build": "node ../tsds-build/scripts/build.js",
    "depcheck": "depcheck",
    "format": "biome check --write --unsafe src/ test/ scripts/",
    "test": "",
    "test2": "tsds test:node --no-timeouts",
    "test:engines": "npm test",
    "version": "tsds version"
  },
  "dependencies": {
    "assert": "1.5.0",
    "cross-spawn-cb": "^1.1.2",
    "exit": "^0.1.2",
    "getopts-compat": "^2.2.5",
    "mocha": "^11.0.1",
    "mocha-compat": "^3.6.2",
    "queue-cb": "^1.2.1",
    "regenerator-runtime": "^0.14.1",
    "resolve": "^1.22.8",
    "ts-swc-loaders": "^1.0.4",
    "tsds-lib": "file:../tsds-lib",
    "unixify": "^1.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.1",
    "depcheck": "^1.4.7",
    "tsds-lib-test": "file:../tsds-lib-test",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=0.8"
  },
  "tsds": {
    "source": "src/index.mjs",
    "targets": [
      "cjs",
      "esm"
    ]
  }
}
