{
  "name": "root",
  "private": true,
  "type": "module",
  "workspaces": [
    "dev/*",
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "clean": "node -e \"const dir = require('path').join(require('homedir-polyfill')(), '.im'); try {require('fs').rmdirSync(dir, {recursive: true})} catch(err) {}\"",
    "docs": "lerna run docs",
    "format": "lerna run format",
    "test": "cd packages/ts-dev-stack && npm run test",
    "test:engines": "cd packages/ts-dev-stack && npm run test",
    "version": "lerna run version"
  },
  "dependencies": {
    "each-package": "^0.8.7",
    "lerna": "^8.1.9"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.5"
  },
  "tsds": {
    "source": "src/index.ts"
  }
}
